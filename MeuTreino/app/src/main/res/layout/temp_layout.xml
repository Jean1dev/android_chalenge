            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            card_view:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_width="100dp"
            android:layout_height="100dp"
            card_view:cardCornerRadius="4dp">

