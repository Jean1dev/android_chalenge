<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mobile.gaeaenergy.com.gaeaenergymobile.InitActivity"
    tools:showIn="@layout/activity_init">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        tools:layout_editor_absoluteY="118dp"
        tools:layout_editor_absoluteX="159dp"
        android:id="@+id/imageView" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="usuario"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="205dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="senha"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="265dp" />

    <RadioButton
        android:id="@+id/rdn_lembrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lembrar dados"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="319dp" />

    <Button
        android:id="@+id/btn_entrar"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_sair"
        android:layout_marginBottom="44dp"
        android:layout_toEndOf="@+id/imageView"
        android:background="@android:color/holo_green_light"
        android:text="Entrar"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="351dp" />

    <Button
        android:id="@+id/btn_sair"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/rdn_lembrar"
        android:background="@android:color/holo_green_light"
        android:text="Sair"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="351dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/flbtn_diet"
        android:clickable="true"
        app:backgroundTint="@android:color/background_light"
        app:rippleColor="@android:color/background_light"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="342dp"
        tools:layout_editor_absoluteY="520dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/flbtn_diet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/btn_star_big_on"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="479dp" />

</RelativeLayout>
